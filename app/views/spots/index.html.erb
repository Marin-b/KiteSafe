  <% @spots.each do |spot| %>
    <hr>
    <%= link_to spot_path(spot) do %>
    <div class="spot-title-container">
      <div>
        <ul class="spot-name">
          <li class="title-name-reg">
            <h5><%= spot.name %></h5>
          </li>
        </ul>
      </div>
      <div class="percentage-result-box">
        <ul class="list-inline percent-result">
          <li class="list-inline-item percent-num">

          </li>

          <li class="list-inline-item percent-sign">
            <h6 class="green">%</h6>
          </li>
        </ul>
        <h6 class="match">Match</h6>
      </div>
    </div>
    <hr>

    <% if spot.photos.empty? %>
      <div class="image-spot" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)),
      url('<%= image_path 'JPG/kite.jpg' %>')">
    <% else %>
      <div class="image-spot" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)),
      url('<%= cl_image_path spot.photos.first.photo.url %>')">
    <% end %>


  </div>
  <div class="arrow bounce">
    <i class="fas fa-chevron-down index-arrow"></i>
  </div>
  <hr>

  <div class="card-bottom">
    <div class="row my-row">
      <div class="average-rating">
        <p>Avg. Rating</p>
        <% spot.average_rating.times do %>
        <i class="fas fa-star fill"></i>
        <% end %>
        </div>

    <% if spot.weather_conditions.empty? %>

    <div class="image-description">
      <ul class="list-inline conditions">
        <li class="list-inline-item"><h5>Fetching Data</h5></li>

        <li class="list-inline-item"><h5>Fetching Data</h5></li>

        <li class="list-inline-item"><h5>Fetching Data</h5></li>
      </ul>
    </div>

    <% else %>

    <div class="image-description">
      <ul class="list-inline conditions">
        <li class="list-inline-item"><h5 class="knots-number"><%= spot.weather_conditions.first.wind_speed.to_i.ceil  unless nil %></h5> <p class="knots-text">kts</p></li>
        <li class="list-inline-item" class="weather-arrow-best"><i class="fas fa-long-arrow-alt-down" data-fa-transform="rotate-<%= spot.weather_conditions.first.wind_direction.to_i.ceil %>"></i> <p class="wind-direction-best"> <%= spot.weather_conditions.first.wind_direction.to_i.ceil unless nil %> Â°</p> </li>
        <% if spot.spot_type == "Wavey" %>
        <li class="list-inline-item wave-icons-best"><%= image_tag("SVG/big-wave.svg", size: "26x26", alt: "map icon") %></li><p class="type-of-wave">Wavey</p>
        <% elsif spot.spot_type == "Choppy" %>
        <li class="list-inline-item wave-icons-best"><%= image_tag("SVG/wave-icon.svg", size: "26x26", alt: "map icon") %></li><p class="type-of-wave">Choppy</p>
        <% else spot.spot_type == "Flat" %>
        <li class="list-inline-item wave-icons-best"><%= image_tag("SVG/wave-flat.svg", size: "26x26", alt: "map icon") %></li><p class="type-of-wave">Flat</p>
        <% end %>
      </ul>
    </div>
    <% end %>
    </div>
  </div>
