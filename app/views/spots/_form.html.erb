<%= simple_form_for(@spot) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :latitude,
                required: true, wrapper_html: {class: "around"}, label: "Latitude of the spot:" %>
    <%= f.input :longitude,
                required: true, wrapper_html: {class: "around"}, label: "Longitude of the spot:" %>
    <%= f.input :description,
                  required: true, label: "Describe the spot in detail:", input_html: {class: "textarea"}, wrapper_html: {class: "around"} %>
    <%= f.label "Optimal wave condition at this spot is:" %>
      <br>
      <%= f.select :optimal_wave_condition, %w(Choppy Flat Waves) %>
      <br>
      <br>
    <%= f.submit ">>" %>
  </div>
<% end %>
