<div class="flexbox">
  <div class="form">
    <h2>Add a photo</h2>
    <%= simple_form_for [@spot, @photo] do |f| %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Add another photo", class: "btn btn-primary" %>
      <hr>
      <%= f.submit "Done", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="photos">
   <% @photos.each do |photo| %>
    <%= cl_image_tag photo.photo.url, height: 300, width: 400, crop: :fill %>
  <% end %>
  </div>
</div>
