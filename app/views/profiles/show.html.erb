<div class="container-profile">
  <div class="photobanner-user" style="background-image: linear-gradient(-180deg, #343C44 0%, rgba(52,60,68,0.76) 1%, rgba(28,30,32,0.37) 10%, rgba(255,255,255,0.00) 99%), url('https://images.unsplash.com/photo-1525626712546-694f3d60f30a?ixlib=rb-1.2.1');">
      <h1><%= @user.username %></h1>

     <% if @user.avatar.present? %>
        <%= cl_image_tag @user.avatar, size: "140x140", crop: :fill,crop: :thumb, gravity: :face, class: "avatar-icon" %>
     <% else  %>
      <%= image_tag "PNG/avatar-placeholder.png", size: "120x120",class: "avatar-icon" %>
     <% end %>

       <div class="user-info">
         <h4 class="profile-age">Age <%= @user.try(:age) %></h4>
         <h4 class="profile-skill-level">Level <%= @user.level %></h4>
         <br>
         <h5> <%= @user.email %></h5>
       </div>
  </div>





  <div class="description-user">
    <i class="fas fa-chevron-down"></i>
    <h4 class="tagline">Tagline</h4>
    <p><%= @user.description%></p>
    <div class="edit-profile">
      <%= link_to "edit profile", edit_user_registration_path(@user) %>
      <i class="far fa-edit"></i>
    </div>







    <li><%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "main-btn centered-btn-continue profile-btn" %></li>
  </div>
</div>



