<div class="container-profile">
  <div class="photobanner-user" style="background-image: linear-gradient(-180deg, #343C44 0%, rgba(52,60,68,0.76) 1%, rgba(28,30,32,0.37) 10%, rgba(255,255,255,0.00) 99%), url('https://images.unsplash.com/photo-1525626712546-694f3d60f30a?ixlib=rb-1.2.1');">

    <h2><%= @user.username %></h2>
     <% if  @user.avatar.nil? %>
      <%= image_tag "https://images.unsplash.com/photo-1525626712546-694f3d60f30a?ixlib=rb-1.2.1", alt: "avatar icon", id:"avatar-icon"   %>
     <% else  %>
        <%= cl_image_tag @user.avatar, size: "100x100", crop: :fill %>
     <% end %>
    <h4>Age <%= @user.try(:age) %></h4>
    <br>
    <h4>Level <%= @user.level %></h4>
    </div>
  </div>
  <div class="description-user">
    <p><%= @user.description%></p>

    <div class="edit-profile">
      <p> <%= @user.email %></p>
      <%= link_to "edit profile", edit_user_registration_path(@user) %>
      <i class="far fa-edit"></i>
    </div>
  </div>
</div>


