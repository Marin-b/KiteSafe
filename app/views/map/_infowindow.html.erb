<div class="marker-card">
  <div>
    <h2> <%= spot.name %> </h2>
  </div>
  <% if spot.photos.empty? %>
    <div class="image-spot" style="background-image: linear-gradient(-180deg, #343C44 0%, rgba(52,60,68,0.76) 1%, rgba(28,30,32,0.37) 10%, rgba(255,255,255,0.00) 99%),
      url('https://images.unsplash.com/photo-1525626712546-694f3d60f30a?ixlib=rb-1.2.1&auto=format&fit=crop&w=629&q=80')">
  <% else %>
    <div class="image-spot" style="background-image: linear-gradient(-180deg, #343C44 0%, rgba(52,60,68,0.76) 1%, rgba(28,30,32,0.37) 10%, rgba(255,255,255,0.00) 99%),
      url('<%= cl_image_path 'spot.photos.first.photo.url' %>')">
  <% end %>
  <div>
    <h3> <%= spot.description %> </h3>
  </div>
  <div>
    <h3> <%= spot.spot_type %> </h3>
  </div>
    <div class="starsaverage">
      <% spot.average_rating.times do %>
        <i class="fas fa-star fill"></i>
      <% end %>
    </div>
  <%= link_to "See this spot", spot_path(spot) %>
</div>
