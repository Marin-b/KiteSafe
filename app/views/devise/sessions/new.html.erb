<div class="container-login" id="form-wrap">
  <%= link_to '<i class="fas fa-chevron-left"></i>'.html_safe, :back %>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs form-box">
        <h1 class="login-dark">Log in</h1>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?  %>

      <%= f.button :submit, "Sign in", class: "login-btn" %>
        <br>
        <br>
        <div class="sign-up">
          <%= link_to "Home", "/" %>
          <br>
          <%= link_to "Sign up", new_registration_path(resource_name), style:"padding:0px" %>
          <br>
          <%= link_to "Forgot your password?", new_password_path(resource_name) , style:"padding:0px"%>
        </div>
    </div>
  <% end %>
</div>

