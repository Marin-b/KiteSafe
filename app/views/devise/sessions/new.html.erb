<div class="container-login" id="form-wrap">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs form-box">
        <h1 class="login-dark">Log in</h1>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?  %>

        <%= f.button :submit, "Sign in", class: "login-btn" %>
        <br>
        <br>
        <br>
        <div class="sign-up">
          <%= render "devise/shared/links" %>
        </div>


    </div>
  <% end %>
</div>

